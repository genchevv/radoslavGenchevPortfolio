<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class =>
'form' }) do |f| %>
  <%= devise_error_messages! %>
  
  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address" %>

  <%= f.submit "Get reset password instructions", class: "btn btn-md btn-primary btn-block" %>
  
<% end %>

<div class="auth-links">
  <%= render "devise/shared/links" %>
</div>

<br>
