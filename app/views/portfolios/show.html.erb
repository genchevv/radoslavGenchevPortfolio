<div class="container">
    <div class="row">
        <div class="col-md-7">
            <%= image_tag @portfolio_item.main_image, class: 'img-fluid' %>
        </div>
        
        <div class="col-md-5">
            <h1><%= link_to "#{@portfolio_item.title}", @portfolio_item.body %></h1>
            
            <hr>
        
            <em><%= @portfolio_item.subtitle %></em>
            
            <!-- <p><%#= @portfolio_item.body %></p> -->
            
            <hr>
            
            <h3>Technologies used:</h3>
            
            <% @portfolio_item.technologies.each do |t| %>
            <li><%= t.name %></li>
            <% end %>
        </div>
    </div>
</div>